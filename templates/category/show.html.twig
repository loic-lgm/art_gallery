{% extends 'base.html.twig' %}

{% block title %}Hello CategoryController!{% endblock %}

{% block body %}

    <h1>CATEGORIE : {{category.name}}</h1>
    
    {% for artwork in artworks %}
        <div class="artwor-container">
        <h3>{{artwork.name}}</h3>
        <p>{{artwork.description}}</p>
        <p>{{artwork.createdIn}}</p>
        {% for image in artwork.images %}
            <img src="{{asset('build/images/' ~ image.name)}}" alt="">
        {% endfor %}
        </div>
    {% endfor %}

    

{% endblock %}

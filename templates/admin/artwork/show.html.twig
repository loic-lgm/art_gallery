{% extends 'base.html.twig' %}

{% block title %}Artwork{% endblock %}

{% block body %}
    <h1>Artwork</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ artwork.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ artwork.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ artwork.description }}</td>
            </tr>
            <tr>
                <th>Author</th>
                <td>{{ artwork.author }}</td>
            </tr>
            <tr>
                <th>CreatedIn</th>
                <td>{{ artwork.createdIn }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ artwork.slug }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ artwork.createdAt ? artwork.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ artwork.updatedAt ? artwork.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_admin_artwork_index') }}">back to list</a>

    <a href="{{ path('app_admin_artwork_edit', {'id': artwork.id}) }}">edit</a>

    {{ include('admin/artwork/_delete_form.html.twig') }}
{% endblock %}
